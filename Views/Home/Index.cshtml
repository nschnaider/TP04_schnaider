@{
    ViewData["Title"] = "Index";
}

<div>
    
    <p>Bienvenidos al Ahorcado!</p>
    <h3>Solo se aceptan MAYUSCULAS</h3>
    
   <h4>
    @for(int i = 0; i < ViewBag.palabraIntento.Length; i++){
        @($"{ViewBag.palabraIntento[i]}  ")
    }
    </h4>
      <h2>Letras utilizadas: 
        @foreach (char letra in ViewBag.letras){
            @($"{letra}  ")
        }
      </h2>
    
    <h2>Intentos: @ViewBag.intentos</h2>
   
    <form action='@Url.Action("IntentoLetra", "Home")' method="get" enctype="multipart/form-data">
        <p>Nueva letra:</p>
        <input type="text" name = "letra" maxLength="1">
        <input type="submit" value="Arriesgar letra">
         
    </form>
    @if(ViewBag.error != null){
         <h5>@ViewBag.error</h5>  
    }
        <form action='@Url.Action("IntentoPalabra", "Home")' method="get" enctype="multipart/form-data">
        <p>Palabra a arriesgar:</p>
        <input type="text" name = "palabra">
        <input type="submit" value="Arriesgar palabra">
    </form>
</div>
